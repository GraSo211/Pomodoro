<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="pomodoro" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
            <!-- Primary brand color. -->
            <item name="colorPrimary">@color/purple_500</item>
            <item name="colorPrimaryVariant">@color/purple_700</item>
            <item name="colorOnPrimary">@color/white</item>
            <!-- Secondary brand color. -->
            <item name="colorSecondary">@color/teal_200</item>
            <item name="colorSecondaryVariant">@color/teal_700</item>
            <item name="colorOnSecondary">@color/black</item>
            <!-- Status bar color. -->
            <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
            <!-- Customize your theme here. -->
    </style>

    <style name="pomodoro.actividadPrincipal" parent="Theme.MaterialComponents.Bridge">
        <item name="colorPrimary">@color/rojo2</item>
        <item name="android:statusBarColor">@color/rojo3</item>
        <item name="titleTextColor">@color/black</item>
        <item name="android:navigationBarColor">@color/rojo3</item>
    </style>

    <style name="pomodoro.actividadDescanso">
        <item name="colorPrimary">@color/azul2</item>
        <item name="android:statusBarColor">@color/azul1</item>
        <item name="android:navigationBarColor">@color/azul1</item>
    </style>

</resources>